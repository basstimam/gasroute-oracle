{
  "buildCommand": "API_BASE_URL=\\\"https://${VERCEL_URL}\\\" bun run manifest && mkdir -p public/.well-known && cp .well-known/agent.json public/.well-known/agent.json",
  "installCommand": "bun install",
  "outputDirectory": "public",
  "rewrites": [
    {
      "source": "/(entrypoints|payments)/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/health",
      "destination": "/api/index"
    },
    {
      "source": "/entrypoints",
      "destination": "/api/index"
    },
    {
      "source": "/",
      "destination": "/api/index"
    }
  ]
}
